import java.util.Map;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;

public class EnvMap {

	public static void main(String[] args) {
		try {
			Map<String, String> env = System.getenv();
			String path = "C:\\Temp\\EnvironmentVariables.txt";
			File outputFile = new File(path);
			
			if (!outputFile.exists()) {
				outputFile.createNewFile();
			}
			
			FileWriter fw = new FileWriter(outputFile.getAbsolutePath());
			BufferedWriter bw = new BufferedWriter(fw);
			
			for (String envName: env.keySet()) {
				String vars = String.format("%s=%s%n", envName,env.get(envName));
				System.out.println(vars);
				bw.write(vars);
			}
			
			bw.close();
		}
		catch (Exception e) {
			System.out.println(e);
		}
	}

		// TO DO: Append to file
		// http://www.homeandlearn.co.uk/java/write_to_textfile.html
}
